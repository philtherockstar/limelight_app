= form_for @client do |f|
  - if @client.errors.any?
    #error_explanation
      %h2= "#{pluralize(@client.errors.count, "error")} prohibited this client from being saved:"
      %ul
        - @client.errors.full_messages.each do |msg|
          %li= msg
  %div.row
    %div.col-xs-12
      %div.form-group.has-feedback{ :id => "client_first_name_group"}
        %div.col-xs-12
          %span.help-block
          %label.col-xs-2.control-label{ :for => "First Name"}
            First name:
          %div.col-xs-5
            =f.text_field :first_name, :class => "form-control"
  %div.row
    %div.col-xs-12
      %div.form-group.has-feedback{ :id => "client_last_name_group"}
        %div.col-xs-12
          %span.help-block
          %label.col-xs-2.control-label{ :for => "Last Name"}
            Last name:
          %div.col-xs-5
            =f.text_field :last_name, :class => "form-control"
  %div.row
    %div.col-xs-12
      %div.form-group.has-feedback{ :id => "client_address_group"}
        %div.col-xs-12
          %span.help-block
          %label.col-xs-2.control-label{ :for => "Address"}
            Address:
          %div.col-xs-5
            =f.text_field :address, :class => "form-control" 
  %div.row
    %div.col-xs-12
      %div.form-group.has-feedback{ :id => "client_phone_group"}
        %div.col-xs-12
          %span.help-block
          %label.col-xs-2.control-label{ :for => "Phone"}
            Phone:
          %div.col-xs-5
            =f.text_field :phone, :class => "form-control"
  %div.row
    %div.col-xs-12
      %div.form-group.has-feedback{ :id => "client_email_group"}
        %div.col-xs-12
          %span.help-block
          %label.col-xs-2.control-label{ :for => "Email"}
            Email:
          %div.col-xs-5
            =f.text_field :email, :class => "form-control"
  %div.row
    %div.col-xs-12
      %div.form-group.has-feedback{ :id => "client_created_at_group"}
        %div.col-xs-12
          %span.help-block
          %label.col-xs-2.control-label{ :for => "Created At"}
            Created At:
          %div.col-xs-5
            =f.datetime_select :created_at, :class => "form-control"
  %div.row
    %div.col-xs-12
      %div.form-group.has-feedback{ :id => "client_updated_at_group"}
        %div.col-xs-12
          %span.help-block
          %label.col-xs-2.control-label{ :for => "Updated At"}
            Updated At:
          %div.col-xs-5
            =f.datetime_select :updated_at, :class => "form-control"  
  %div.row
    %div.col-xs-12
      %div.col-xs-12
        .actions
        = f.submit 'Save'

%div.panel.panel-default
  %div.panel-heading
    Listing properties
  %div.panel-body
    %table.table.table-striped
      %thead
        %tr
          %th
            ID
          %th
            Address
          %th
            City
          %th
            SQFT
          %th
            Listing Price
          %th
            Selling Price
          %th
            Status
          %th
          %th
          %th
      %tbody
      - @properties.each do |property|
        %tr
          %td=property.id
          %td=property.address
          %td=property.city
          %td=property.sqft
          %td=number_to_currency(property.listing_price) if property.listing_price
          %td=number_to_currency(property.selling_price) if property.selling_price
          %td=property.status.status if property.status_id
          %td
            = link_to 'Show', property
            %span.glyphicon.glyphicon-eye-open
          %td
            = link_to 'Edit', edit_property_path(property)
            %span.glyphicon.glyphicon-pencil
          %td
            = #link_to 'Destroy', property, :method => :delete, :data => { :confirm => 'Are you sure?' }
            <!-- %span.glyphicon.glyphicon-remove -->
    %br
    = link_to 'New Property', new_property_path
    %span.glyphicon.glyphicon-plus